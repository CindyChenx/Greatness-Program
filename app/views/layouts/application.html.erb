<!DOCTYPE html>
<html>
  <head>
    <title>GreatnessProgram</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <% flash.each do |k,v| %>
        <div class=<%=k%>><%= v %></div>
      <% end %>
      <%= navbar %>
    </header>

    <% if logged_in? %>
    <p class="search">
      <a href="/users">WHO'S IN THE PROGRAM?</a><br><br>
      <a href="/goals">SEE WHAT MY FRIENDS ARE UP TO</a><br><br>
      <a href="/coaches">MEET OUR COACHES</a><br><br>
      <a href="/users/<%=current_user.id%>/goals">CHECK MY GOALS</a><br><br>
      <a href="/goals/new">SET UP YOUR GOAL BEFORE IT'S TOO LATE!</a><br><br>
      <a href="/appointments/new">BOOK A NEW APPOINTMENT!</a>
    </p>
    <% end %>

    <%= yield %>
  </body>
</html>
